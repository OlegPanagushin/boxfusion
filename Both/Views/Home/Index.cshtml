@{
    ViewData["Title"] = "Home Page";
}
@model IndexViewModel

<div class="jumbotron">
    <form asp-controller="Home" asp-action="Post" method="post" class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <h2>Choose Regions</h2>
            <h3>Knockout</h3>
            <div class="form-group">
                <region-selector asp-for="Region" client-country-validation="validateCountry" value="@Model.Region"></region-selector>
            </div>
            <div class="form-group">
                <region-selector asp-for="Region2" client-country-validation="validateCountry" value="@Model.Region2"></region-selector>
            </div>

            <h3>ReactJS</h3>
            <div class="form-group">
                <react-region-select asp-for="RegionReact" custom-validation="validateCountry" value="@Model.RegionReact"></react-region-select>
            </div>
            <div class="form-group">
                <react-region-select asp-for="RegionReact2" custom-validation="validateCountry" value="@Model.RegionReact2"></react-region-select>
            </div>
            <div class="btn-group pull-right">
                <button type="submit" class="btn btn-default">Sumbit</button>
            </div>
        </div>
        <div class="col-lg-3"></div>
    </form>
</div>
